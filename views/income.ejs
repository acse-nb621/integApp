            for(var i = 1; i < 7; i++){
                var str = "#month"+i;
            
                var sel = document.getElementById(str);
                for(var j = 0; j < 3050; j+=50){
                    var temp = document.createElement("option");
                    temp.value = j;
                    temp.innerText = j;
                    $(str).append(temp);
                }
            }


            if(ans != ""){
                var lsans = ans.split("/");

                console.log(lsans)
       
                for(var i = 0; i < lsans.length - 1; i++){
                    var ustr = "#select"+String(i+1)+" option[value="+lsans[i]+"]";
                    $(ustr).prop("selected", true);
                }

            };

            function calcTotal(){
                var temp = 0;
                for(var i=0; i < 6; i++){
                    if(ansList[i] == true){
                        temp++;
                    }
                }
                return temp;
            };

            function updateImage(){
                var temp = calcTotal();
                var tempstr = "/female-";
                if(gender == "ذكر"){
                    tempstr = "/male-"
                }
                if(temp < 3){
                    tempstr+="p.png";
                }else if(temp < 5){
                    tempstr+="n.png";
                }else{
                    tempstr+="r.png";
                }
                $("#displayImg").attr("src",tempstr);
            }

            $("#select1").change(function(e){
                if(!($("#select1 option:selected" ).hasClass("def"))){
                    ansList[0] = true;
                    updateImage();
                }

            });

            $("#select2").change(function(e){
