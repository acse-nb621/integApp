    <body>
        <nav class = "navbar bg-dark navbar-dark">
            <div class="container">
                <a class="navbar-brand">استبيان التقييم المبدئي – لومينوس</a>
            </div>
        </nav>

        <div id="middle-section" class="row justify-content-center" >
            <div id="main" class="container cardstyle1">
                <div class="row justify-content-center" style="height: 30%; align-items: center;">
                    <img class="topImg" src="/phone.png"  alt="unknown" >
                </div>
                <div class="row justify-content-center" style="height: 10%; font-size: small; align-content: flex-end;">الاسم:</div>
                <div class="row justify-content-center" style="height: 10%; align-items:center;" id="buttonSpace">
                    <form >
                        <input style="width:85%; font-size: medium; text-align: center;" id="name" type="text" required>
                        
                    </form>
                </div>
          
                <div class="row justify-content-center" style="height: 10%; font-size: small;align-content: flex-end;" id="titleSpace"></div>
                <div class="row justify-content-center" style="height: 10%; align-items:center;" id="buttonSpace">
                    <form >
                        <input style="width:85%; font-size: medium; text-align: center;" type="tel" id="phone" name="phone" placeholder="الصيغة: 07XXXXXXXX" pattern="07[0-9]{8}" required>
                    
                    </form>
                </div>
                <div class="row justify-content-center" style="height: 10%; font-size: small;align-content: flex-end;"> رقم الطالب: (خياري)</div>
                <div class="row justify-content-center" style="height: 10%; align-items:center;" id="buttonSpace">
                    <form >
                        <input id="studNum" style="width:85%; font-size: medium; text-align: center;" type="text"  required>
                        
                    </form>
                </div>

            

        <script>

            var rank    = "<%= info[0].quesRank %>";
                type    = "<%= info[0].ansType %>",
                title   = "<%= info[0].title %>";
            var tempphone = document.getElementById("phone");
            var tempname = document.getElementById("name");
            var tempnum = document.getElementById("studNum");

            var dispTitle = document.getElementById("titleSpace");
            dispTitle.innerText = title;
            var info = "<%=info[1]%>";
            var ansString = [];
            var ans ="";
            var imgstr ="";

            var linfo = info.split(",");
          
        

            if(linfo.length > 4){
               
                var ansJson = listToJSON(linfo);
                var str="ans"+rank;
                if(ansJson[str] != undefined){
                    ans = ansJson[str];
                }
            }

            if(ans != ""){
                var lsans = ans.split("/");
                
                tempname.value = lsans[0];
                tempphone.value = lsans[1];
                if(lsans.length == 3){tempnum.value = lsans[2];};
            }
               
            



        </script>


<%- include('partials/footer.ejs') %>

<script> 
    document.getElementById("prev").disabled = true;




    $("#next").click(function(){
     
        
        if(ans == "" && (tempname.value == "" || tempphone.value == ""  )){
            
            alert("please answer")
        }else{
            if(tempphone.value != "" || tempnum.value != "" || tempname.value != ""){
                
                var ls = ["","",""];
                var oldansls = ans.split("/");
                if(tempname.value != ""){
                    ls[0] = tempname.value;
                }else{
                    ls[0] = oldansls[0];
                }
                if(tempphone.value != ""){
                    ls[1] = tempphone.value;
                }else{
                    ls[1] = oldansls[1];
                }
                if(tempnum.value != ""){
                    ls[2] = tempnum.value;
                }else if(oldansls.length == 3){
                    ls[2] = oldansls[2];
                }
                var sendans = ls[0]+"/"+ls[1];
                if(ls[2] != ""){
                    sendans += "/"+ls[2];
                }
                $.post("/submit", {answer : sendans, quest : rank});
            }


            
            window.location.href = "/question/"+String(Number(rank)+1);
            
        }

    })

    
</script>