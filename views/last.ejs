<script> 
    // document.getElementById("prev").disabled = true;

    $("#next").click(function(){
        //get input
     
        var inp = $("#range").val();
        if(ans == "" && inp == ""){
            alert("الرجاء الإجابة على السؤال")
        }else{
            if(inp != ""){
                $.post("/submit", {answer : inp, quest : rank});
            }
            window.location.href = "/question/"+String(Number(rank)+1);
        }

    })

    
</script>