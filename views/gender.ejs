<script> 

function sleep(ms) {
        return new Promise(resolve => setTimeout(resolve, ms));
    }


    $("#next").click(function(){
     
        
        if(localans== "" && ans == ""){
            alert("الرجاء الإجابة على السؤال")
        }else{
            if(localans != ""){
                $.post("/submit", {answer : localans, quest : rank});
            }
            sleep(500).then(() => {
                window.location.href = "/question/"+String(Number(rank)+1); 
            });
            
        }

    });

    
</script>