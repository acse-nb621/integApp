        <div id="middle-section" class="row justify-content-center">
            <div id="main" class="container cardstyle1" style="width:90%">
                <div class="row justify-content-center" style="height: 40%; align-items: center;" >
                    <div id="quesTxt" class="col-12 d-flex justify-content-center" style="height: 33%; text-align: center; align-items: center;">
                    </div>   
                    <div id="extraTxt" class="col-12 d-flex justify-content-center" style="height: 33%; text-align: center; align-items: center;">
                        (1 = غير موافق بشدة ، 5 = موافق بشدة)
                    </div>
                </div>
                <div class="row justify-content-center" style="height: 50%; align-items: center;" >
                    <div class="col-4 d-flex justify-content-center" style="height: 36%; text-align: center; align-items: center; overflow: hidden;">
                        <img id="1" class="opt" style="height: 90%;" src="">
                    </div>   
                    <div class="col-4 d-flex justify-content-center" style="height: 36%; text-align: center; align-items: center;overflow: hidden;">
                        <img id="2" class="opt" style="height: 90%;" src="">
                    </div>
                    <div class="col-4 d-flex justify-content-center" style="height: 36%; text-align: center; align-items: center;overflow: hidden;">
                        <img id="3" class="opt" style="height: 90%;" src="">
                    </div>
                    <div class="col-4 d-flex justify-content-center" style="height: 36%; text-align: center; align-items: center;overflow: hidden;">
                        <img id="4" class="opt" style="height: 90%;" src="">
                    </div>
                    <div class="col-4 d-flex justify-content-center" style="height: 36%; text-align: center; align-items: center;overflow: hidden;">
                        <img id="5" class="opt" style="height: 90%;" src="">
                    </div>
                </div>

   
            

        <script>

            var rank    = "<%= info[0].quesRank %>";
                type    = "<%= info[0].ansType %>",
                title   = "<%= info[0].title %>";
            
            var info = "<%=info[1]%>";
            var ans ="";
            var imgstr ="";

            var linfo = info.split(",");
        
            var localans = "";
            var gender = "";

            if(linfo.length > 4){
                var ansJson = listToJSON(linfo);
                var str="ans"+rank;
                if(ansJson[str] != undefined){
                    ans = ansJson[str];
                }
                if(ansJson["ans2"] != undefined){
                    gender = ansJson["ans2"];
                }
            }

            if(ans != ""){
                var qry = document.getElementById(ans);
                qry.classList.add("clickedThumb");
            }

            // load default image
            var tmp="";
            if(gender == "ذكر"){
                temp = "/male";
            }else{
                temp = "/female";
            }

            for(var i=0; i < 5; i++){
                var imgSrc = temp+(String(i+1))+".png";
                var imgId = "#"+(String(i+1));
                $(imgId).attr("src",imgSrc);
            }

            var getQues = document.getElementById("quesTxt");
            getQues.innerText = title;
            if(rank == 33){
                $("#quesTxt").css("font-size","small");
                $("#extraTxt").css("font-size","small");

            }

            for(var i = 0; i < 5; i++){
                var str = "#"+(String(i+1));
                $(str).on("click",function(e){
                    $(".opt").removeClass("clickedThumb");
                    
                    localans = e.target.id;
                    $("#"+localans).addClass("clickedThumb");
                });
            }

        </script>



        <div class="row justify-content-between"  style="height: 10%; align-items: flex-end;">
            <button class="col-4 nav-btn" id="prev">السابق</button>
            <button class="col-4 nav-btn" id="next" type="submit">التالي</button>
        </div> 
    </div>
</div>



<script>




$("#prev").click(function(){
    var prevq = Number(rank)-1;
    var str = "/question/"+String(prevq);
    window.location.href = str;
});
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>



<script> 
    // document.getElementById("prev").disabled = true;

    $("#next").click(function(){
        if(ans == "" && localans == ""){
            alert("please answer");
        }else{
            if(localans != ""){
                $.post("/submit", {answer : localans, quest : rank});
            }
            window.location.href = "/question/"+String(Number(rank)+1);
        }
        
        
    });

    
</script>