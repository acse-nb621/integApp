<script> 
    // document.getElementById("prev").disabled = true;
    var temp = document.getElementById("phone");

    $("#next").click(function(){
        //get input
        var inp = $("#otherTxt").val();
        if(localans== "" && ans == "" && inp == ""){
            alert("please answer")
        }else{
            if(localans != ""){
                $.post("/submit", {answer : localans, quest : rank});
            }else if(inp != ""){
                $.post("/submit", {answer : inp, quest : rank});
