        <script>

            var rank    = "<%= info[0].quesRank %>";
                type    = "<%= info[0].ansType %>",
                title   = "<%= info[0].title %>";
            
            var info = "<%=info[1]%>";
            var ans ="";
            var imgstr ="";

            var linfo = info.split(",");
        
            var localans = "";
            var gender = "";
            var ansJson = listToJSON(linfo);
            if(linfo.length > 4){
                
                var str="ans"+rank;
                if(ansJson[str] != undefined){
                    ans = ansJson[str];
                }
                if(ansJson["ans2"] != undefined){
                    gender = ansJson["ans2"];
                }
            }
            
            if(ans != ""){
                var txt = document.getElementById("txtBox");
                txt.innerText = ans;    
            }

            $("#trange").on("input", function(e){
                var txt = document.getElementById("txtBox");
                txt.innerText = this.value;  
                localans = this.value;
                
            });


        </script>

